<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="300dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/collection_recycle_item_id"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintStart_toStartOf="@+id/collection_recycle_item_image"
                card_view:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/collection_recycle_item_name"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textStyle="bold"
                android:textSize="18sp"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintLeft_toRightOf="@id/collection_recycle_item_id"
                android:layout_marginTop="5dp" />

            <ImageView
                android:id="@+id/collection_recycle_item_image"
                android:layout_width="170dp"
                android:layout_height="120dp"
                card_view:layout_constraintTop_toBottomOf="@id/collection_recycle_item_name"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:contentDescription="@string/pokemon_image"
                android:layout_margin="10dp"/>

        </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>